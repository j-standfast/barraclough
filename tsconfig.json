{
  "compilerOptions": {
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "NodeNext",
    "target": "ES2020",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "nodenext",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "strict": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ], 
    "types": [
      "obsidian-typings", 
    ]
  },
  "include": [
    "**/*.ts"
  ]
}
